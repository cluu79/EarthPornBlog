<% include ./partials/headers %>

	<% blogs.forEach(function(blog){ %>
	<div>
		<h2><%= blog.title %></h2>
		<img src="<%=blog.image %>">
		<span><%= blog.created.toLocaleString() %></span>
		<p><%= blog.body.substring(0,100) %>.....</p>
		<a href="/blogs/<%= blog.id %>">Read More</a>
		
	</div>
<% }) %>
	
